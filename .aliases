#aliases
alias ls='ls --group-directories-first --color=auto'
alias l='ls -lh'
alias l.='ls -lhd .*'
alias la='ls -lhA'
alias h='history'
alias j='journalctl'
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -i'
alias df='df -h'
alias frei='df -h; free -h'
alias vi='nvim'
alias untar='tar -xzf'
alias tar='czf'
alias sc='sudo SYSTEMD_EDITOR=/bin/nvim /usr/bin/systemctl'
alias sys='/usr/bin/systemctl'
